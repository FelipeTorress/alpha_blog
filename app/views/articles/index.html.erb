<h1>Página de listagem de artigos</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descrição</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td> <%= article.title %> </td>
        <td> <%= article.description %> </td>
        <td><%= link_to 'Mostrar', article_path(article) %></td>
        <td><%= link_to 'Editar', edit_article_path(article) %></td>
        <td><%= link_to 'Deletar', article_path(article), data: { "turbo-method": :delete , "turbo-confirm": "Você tem certeza que deseja deletar esse artigo?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</br>
<%= link_to 'Criar Novo Artigo', new_article_path %>